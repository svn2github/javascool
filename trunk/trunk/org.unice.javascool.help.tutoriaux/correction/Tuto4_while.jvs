Tuto4_while{
	
	String lirePrenom(){
		String prenom = readString();
		return prenom;	
	}
	
	int lireAge(){
		int age = readInt();
		return age;
	}
	
	void main(){
		int i=0;
		while(i<3){
			println("entrez votre prenom : ");
			String prenom = lirePrenom();
			println("entrez votre age : ");
			int age = lireAge();	
		
			println("prenom : " + prenom);
			println("age : " +age+" ans");
			i++;
		}
	}
}
