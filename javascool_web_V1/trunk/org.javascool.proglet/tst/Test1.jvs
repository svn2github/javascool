
// Ajoute une image sur le display en (x,y) de taille (w, h) Ã  la profondeur p
JLabel icon(String image, int x, int y, int w, int h, int p) {
  JLabel icon = new JLabel();
  icon.setIcon(new ImageIcon(image));
  icon.setBounds(x, y, w, h);
  getSwingPane().add(icon, new Integer(p), 0);
  return icon;
}

// Programme principal
void main() {
   // On efface tout
   JLayeredPane pane = getSwingPane();
   pane.removeAll();
   // On affiche une image de fond
   icon("fleur-fond.jpg", 0, 0, pane.getWidth(), pane.getHeight(), 1);
   // On affiche une fleur
   JLabel fleur = icon("fleur-move.png", 100, 100, 100, 100, 2);
   // Dix fois on trace une fleur n'importe ou
   for(int i = 0; i < 10; i++) {
      fleur.setBounds(random(0, 200), random(0, 200), 100, 100);
      sleep(1000);
      echo(i);
   }
}
